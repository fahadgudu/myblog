<%= form_for(@event, html: {multipart: true}) do |p| %>

    <% if @event.errors.any? %>
        <div id="error_explanation">
          <h2>
            <%= pluralize(@event.errors.count, "error") %> prohibited
            this event from being saved:
          </h2>
          <ul>
            <% @event.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
    <p>
      <%= p.fields_for :file do |f| %>
          <%= f.label :file %>
          <%= f.file_field :data %>
      <% end %>
    </p>
    <p>
      <%= p.label :title %><br>
      <%= p.text_field :title %>
    </p>

    <p>
      <%= p.label :body %><br>
      <%= p.text_area :body %>
    </p>

    <p>
      <%= p.submit %>
    </p>

<% end %>