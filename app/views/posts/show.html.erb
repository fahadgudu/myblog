<div class="blog-header">
  <h1 class="blog-title">View post</h1>
  <p class="lead blog-description">Here you can view your post.</p>
</div>

<h2 class="blog-post-title"><%= @post.title %></h2>
<p class="blog-post-meta"><%= @post.created_at %>
  <%= link_to 'View', post_path(@post), class: 'btn btn-primary btn-xs' %>
  <%= link_to 'Edit', edit_post_path(@post), class: 'btn btn-primary btn-xs' %>
  <%= link_to 'Delete', post_path(@post),
              class: 'btn btn-primary btn-xs',
              method: :delete,
              data: { confirm: 'Are you sure?' } %>
</p>
<%= image_tag @post.image.data_url if @post.image %>
<p><%= @post.body %></p>
<hr>
<%= render @post.comments %>
<%= render partial: 'comments/form', object: @post, as: 'post' %>